<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Formulario para el Asistente -->
    <record id="product_description_updater_wizard_form_view" model="ir.ui.view">
        <field name="name">product.description.updater.wizard.form</field>
        <field name="model">product.description.updater.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualizar Descripción de Productos">
                <group>
                    <field name="file_data" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button name="action_update_products"
                            type="object"
                            string="Importar y Actualizar"
                            class="oe_highlight"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana para abrir el Asistente -->
    <record id="action_open_product_description_updater_wizard" model="ir.actions.act_window">
        <field name="name">Actualizar Descripción de Producto (XLSX)</field>
        <field name="res_model">product.description.updater.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menú Item en el módulo de Ventas, bajo "Productos" -->
    <menuitem
        id="menu_product_description_updater_wizard"
        name="Actualizar Descripción (XLSX)"
        parent="sale.product_menu_catalog"
        action="action_open_product_description_updater_wizard"
        sequence="100"/>

</odoo>