<odoo>
    <record id="view_purchase_import_wizard_form" model="ir.ui.view">
        <field name="name">purchase.import.wizard.form</field>
        <field name="model">purchase.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Precios Actualizados">
                <sheet>
                    <group>
                        <field name="file_data" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button name="action_import_lines" string="Importar y Actualizar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_purchase_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar Excel</field>
        <field name="res_model">purchase.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>